Config { 
   -- layout
     sepChar =  "%"   -- delineator between plugin names and straight text
     , alignSep = "}{"  -- separator between left-right alignment
     , template = " %StdinReader% }{ %memory% | %battery% | %dynnetwork% || %date%"
     --, template = " %StdinReader% }{%multicpu% | %memory% | %battery% | %dynnetwork% | %date%"
   -- general behavior

   , commands = 
        [ Run StdinReader
        -- cpu activity monitor
--        , Run MultiCpu       [ "--template" , "Cpu: <autototal> %"
--                             , "--Low"      , "50"         -- units: %
--                             , "--High"     , "85"         -- units: %
--                             , "--low"      , "green"
--                             , "--normal"   , "orange"
--                             , "--high"     , "red"
--                             ] 10
        -- memory usage monitor
        , Run DynNetwork     [ "--template" , "<dev>: <rx>kB/s|<tx>kB/s"
                             , "--Low"      , "1000"       -- units: kB/s
                             , "--High"     , "5000"       -- units: kB/s
                             , "--low"      , "green"
                             , "--normal"   , "orange"
                             , "--high"     , "red"
                             ] 10
        , Run Memory         [ "--template" ,"Mem: <usedratio>%"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "green"
                             , "--normal"   , "orange"
                             , "--high"     , "red"
                             ] 10
-- battery monitor
        , Run Battery        [ "--template" , "Batt: <acstatus>"
                             , "--Low"      , "10"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "red"
                             , "--normal"   , "orange"
                             , "--high"     , "green"

                             , "--" -- battery specific options
                                       -- discharging status
                                       , "-o"	, "<left>% (<timeleft>)"
                                       -- AC "on" status
                                       , "-O"	, "<fc=#dAA520>Charging</fc>"
                                       -- charged status
                                       , "-i"	, "<fc=green>Charged</fc>"
                             ] 50

        , Run Date           "%a %F <fc=#ffffff>%T</fc>" "date" 10
        ]
   }
